{
  "manifest_version": 2,
  "name": "Feature flags - Development",
  "short_name": "Feature flags",
  "description": "Feature flag extension for Google Chrome",
  "version": "0.0.0",
  "minimum_chrome_version": "38",

  "icons": {
    "16": "assets/icon-16-dev.png",
    "32": "assets/icon-32-dev.png",
    "128": "assets/icon-128-dev.png",
    "512": "assets/icon-512-dev.png"
  },

  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Feature flags"
  },

  "background": {
    "scripts": ["eventPage.js"],
    "persistent": true
  },

  "permissions": [
    "activeTab",
    "tabs",
    "cookies",
    "background",
    "http://*/*",
    "https://*/*"
  ]
}
